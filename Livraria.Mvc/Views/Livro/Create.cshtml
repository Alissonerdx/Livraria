@model LivroViewModel

@{
    ViewData["Title"] = "Cadastrar Livro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cadastrar Livro</h1>
    </div>
</div>
<form role="form" id="livroForm" method="post" asp-action="Create">
    <div class="panel panel-default">
        <div class="panel-heading">
            Novo Livro
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input class="form-control" asp-for="Titulo" required/>
                    </div>

                    <div class="for-group col-md-4">
                        <label asp-for="Ano" class="control-label"></label>
                        <input class="form-control" asp-for="Ano" type="text"/>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="ISBN" class="control-label"></label>
                        <input class="form-control" asp-for="ISBN" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="for-group col-md-4">
                        <label asp-for="NumeroDePaginas" class="control-label"></label>
                        <input class="form-control" asp-for="NumeroDePaginas" type="text" />
                    </div>

                    <div class="for-group col-md-4">
                        <label asp-for="QuantidadeEmEstoque" class="control-label"></label>
                        <input class="form-control" asp-for="QuantidadeEmEstoque" type="text"/>
                    </div>

                    <div class="for-group col-md-4">
                        <label asp-for="Peso" class="control-label"></label>
                        <input class="form-control" asp-for="Peso" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label asp-for="AutorId">
                            Autor *
                        </label>
                        <select class="form-control" asp-for="AutorId" required></select>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="EditoraId"></label>
                        <select class="form-control" asp-for="EditoraId" required></select>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Assunto"></label>
                        <textarea asp-for="Assunto"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-left">
                <button type="submit" class="form-control">Salvar</button>
            </div>
        </div>
    </div>
</form>


@section Scripts
    {
    <script src="~/js/views/livro/livro-create.js" asp-append-version="true"></script>
}
